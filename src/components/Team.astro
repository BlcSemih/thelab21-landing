---
const team = [
  {
    name: 'Semih',
    role: 'Co-Founder & Developer',
  },
  {
    name: 'Maximilian',
    role: 'Co-Founder & Developer',
  },
];

const skills = ['Next.js', 'React', 'TypeScript', 'Tailwind CSS', 'Supabase', 'Firebase', 'Node.js', 'Vercel'];
---

<section id="team" class="py-24 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="section-title">Das Team</h2>
      <p class="section-subtitle mx-auto">
        Zwei Entwickler aus Stuttgart mit Leidenschaft f√ºr moderne Web-Technologien.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto mb-12">
      {team.map((member) => (
        <div class="card text-center">
          <div class="w-16 h-16 rounded-full bg-violet/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-violet">{member.name.charAt(0)}</span>
          </div>
          <h3 class="text-xl font-semibold text-foreground mb-1">{member.name}</h3>
          <p class="text-muted">{member.role}</p>
        </div>
      ))}
    </div>
    
    <!-- Skills -->
    <div class="flex flex-wrap justify-center gap-3 max-w-3xl mx-auto">
      {skills.map((skill) => (
        <span class="px-4 py-2 text-sm text-muted bg-white/5 border border-border rounded-lg">
          {skill}
        </span>
      ))}
    </div>
  </div>
</section>
